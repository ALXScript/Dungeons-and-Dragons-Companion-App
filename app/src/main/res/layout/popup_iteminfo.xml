<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@color/colorTan"
    android:orientation="vertical"
    android:padding="5dp">

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:text="@string/close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/itemTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/itemSourceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/itemDescTextView"
        android:layout_width="match_parent"
        android:layout_height="84dp" />

    <Button
        android:id="@+id/itemAddBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addItem" />

    <Button
        android:id="@+id/itemRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/removeItem" />

</LinearLayout>
